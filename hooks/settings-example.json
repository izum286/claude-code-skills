{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ~/.claude/hooks/multi-llm-advisor-hook.ts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ~/.claude/hooks/security-scan.ts"
          },
          {
            "type": "command",
            "command": "npx tsx ~/.claude/hooks/pre-commit-quality.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ~/.claude/hooks/post-edit-tsc-check.ts"
          }
        ]
      }
    ]
  }
}
